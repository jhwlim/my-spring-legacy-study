<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.demo.domain.user.mapper.UserMapper">

	<insert id="createUser">
		INSERT 
		INTO users(
			username,
			password,
			roles
		)
		VALUES(
			#{username},
			#{password},
			#{roles}
		)
	</insert>
	
	<select id="findUserByUsername" resultType="com.spring.demo.domain.user.model.User">
		SELECT
			*
		FROM
			users
		WHERE
			username = #{username}
	</select>
	
</mapper>